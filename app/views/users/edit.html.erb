<div class="container">
    <div class="row">
        <div class="mx-auto">
        <h1>User info</h1><br />
            <%= form_with model: @user do |f| %>
                <label for="user_name">Name</label><br />
                <%= f.text_field :name, autofocus: true, id:"user_name" %><br />
                <label for="user_profile_image">Image</label><br />
                <%= f.file_field :profile_image, placeholder: "user_profile_image", accept: "image/*" %><br />
                <label for="user_introduction">Introduction</label><br />
                <%= f.text_area :introduction, autofocus: true, id:"user_introduction" %><br />
                    
                <%= f.submit 'Update User',class: "btn btn-secondary" %>
            <% end %>
        </div>
    </div>
</div>