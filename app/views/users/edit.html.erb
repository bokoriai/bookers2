<div class="container">
    <div class="row mx-auto">
        <h1>User info</h1><br />
            <%= form_with model: @user do |f| %>
                <label for="inputName">Name</label><br />
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %><br />
                <label for="inputName">Image</label><br />
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br />
                <label for="inputName">Introduction</label><br />
            <%= f.submit 'Update User',class: "btn btn-secondary" %>
            
            <% end %>
    </div>
</div>