<%= render 'books/left', books: @books %>

        <div class="col-md-8">
            <p><h1>Users</h1></p>

            <table class="table">
                <tbody>
                    <thead>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                        <th></th>
                    </tr>
                    </thead>
                    
                    <% @users.each do |user| %>
                    <tr>
                        <td><%= image_tag user.get_profile_image(100,100) %></td>
                        <td><%= user.name %></td>
                        <td></td>
                    </tr>
                    <% end %>
                    
                </tbody>
            </table>
        </div>
    </div>
</div>
