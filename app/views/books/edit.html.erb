<div class="container">
    <div class="row">
        <div class="mx-auto">
        <h1>Editing Book</h1><br />
            <%= form_with model: @book do |f| %>
                <label for="title">Title</label><br />
                <%= f.text_field :title, autofocus: true, id:"title" %><br />
                
                <label for="body">Opinion</label><br />
                <%= f.text_area :body, autofocus: true, id:"body" %><br />
                    
                <%= f.submit 'Update Book',class: "btn btn-success" %>
            <% end %>
            
            <p>
                <%= link_to 'Show', book_path(@book.id) %>
                 | 
                <%= link_to 'Back', books_path %>
            </p>
        </div>
    </div>
</div>